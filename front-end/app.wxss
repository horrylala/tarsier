 .drawer-screen {
  width: 100%; 
  height: 100%; 
  position: fixed; 
  top: 0; 
  left: 0; 
  z-index: 1000; 
  background: #000; 
  opacity: 0.5; 
  overflow: hidden; 
} 
.drawer-box { 
  width:auto;
  overflow: hidden; 
  position: fixed; 
  top: 8%; 
  left: 20px; 
  right:20px;
  z-index: 1001; 
  text-align: center;
  padding: 15px 10px;
  background: #fff; 
  border-radius: 3px; 
} 
.drawer-close { 
  width:100%;
  position: fixed; 
  bottom: 20%;
  z-index: 1001; 
  text-align: center; 
} 
